{
  "manifest_version": 2,
  "name": "SplashReader: Speed Reading with Breaks",
  "short_name": "SplashReader",
  "version": "0.1.0",
  "description": "A speed reader that lets you come up for air.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Splash!"
  },
  "author": "Alex Rattray",
  "background": {
    "persistent": false,
    "scripts": ["js/chromeBrowserAction.js"]
  },
  "homepage_url": "http://splashreaderapp.com",
  "offline_enabled": true,
  "permissions": [
    "activeTab",
    "contextMenus"
  ]
}
