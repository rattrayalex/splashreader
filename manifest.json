{
  // ref: https://developer.chrome.com/extensions/manifest

  // Required
  "manifest_version": 2,
  "name": "SplashReader",
  "version": "0.1.0",

  // Recommended
  // "default_locale": "en",
  "description": "A speed reader that lets you come up for air.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  // Pick one (or none)
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Splash!"
    // "default_popup": "popup.html"
  },
  // "page_action": {...},

  // Optional
  "author": "Alex Rattray",
  // "automation": ...,
  "background": {
    // Recommended
    "persistent": false,
    "scripts": ["js/chromeBrowserAction.js"]
